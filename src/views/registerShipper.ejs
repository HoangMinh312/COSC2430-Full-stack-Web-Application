<form action="/auth/register/shipper" method="post">
    <h1>Shipper</h1>
    <%- include ('./partials/messages') %>
    <!-- Username section required -->
    <div>
        <label for="username">Username:</label>
        <input type="username" name="username" id="username" value="<%= typeof username != 'undefined' ? username : ''%>">

    </div>
    <!-- Password section required -->
    <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" value="<%= typeof password != 'undefined' ? password : ''%>">
    </div>
    <!-- Profile picture section required -->
    <div>
        <label for="profilePicture">Profile picture:</label>
        <input type="file" name="profilePicture" id="profilePicture">
    </div>
    <!-- Name section required -->
    <div>
        <label for="name">Name:</label>
        <input type="name" name="name" id="name" value="<%= typeof name != 'undefined' ? name : ''%>">
    </div>
    <!-- Distribution hub section required -->
    <div>
        <label for="dhub">Distribution Hub:</label>
        <select name="distributionHub" id="distributionHub">
            <option value="District 1 Hub" <%= typeof distributionHub != 'undefined' ? 'selected' : '' %>>District 1 Hub</option>
            <option value="District 7 Hub" <%= typeof distributionHub != 'undefined' ? 'selected' : '' %>>District 7 Hub</option>
            <option value="District 2 Hub" <%= typeof distributionHub != 'undefined' ? 'selected' : '' %>>District 2 Hub</option>
        </select>
    </div>
    <div>
        <button type="submit">Register</button>    
    </div>
</form>