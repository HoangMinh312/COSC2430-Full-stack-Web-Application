<form action="/auth/login" method="post">
    <h1>Login</h1>
    <%- include ('partials/_messages') %>
    <div>
        <label for="username">Username:</label>
        <input type="username" name="username" id="username" value="<%= typeof username != 'undefined' ? username : ''%>">

    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" value="<%= typeof password != 'undefined' ? password : ''%>">
    </div>
    <div>
        <button type="submit">Login</button>    
    </div>
</form>