<div class="relative inline-block py-2 px-6 my-2">
    <button id="statusButton" class="py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-opacity-75">
        Active
    </button>
    <ul id="statusList" class="absolute hidden bg-white border border-gray-300 rounded-md shadow-lg z-10">
        <li class="cursor-pointer hover:bg-gray-100 px-4 py-2" data-value="Active">Active</li>
        <li class="cursor-pointer hover:bg-gray-100 px-4 py-2" data-value="Delivered">Delivered</li>
        <li class="cursor-pointer hover:bg-gray-100 px-4 py-2" data-value="Cancelled">Cancelled</li>
    </ul>
    <form id="statusForm" action="/users/shipper/active-order/<%= order.id %>/update-status" method="post">
        <input type="hidden" id="statusInput" name="status" value="">
    </form>
</div>

<script src="/js/dropdown_shipper_page.js"></script>