<div class="flex items-center justify-center m-5 p-2 bg-gray-300 rounded-lg shadow-lg">
    <% if (userType == "Customer") { %>
        <form action="/users/customer/profile/update-picture" method="post">
    <% } else if (userType == "Vendor") { %>
        <form action="/users/vendor/profile/update-picture" method="post">
    <% } else if (userType == "Shipper") { %>
        <form action="/users/shipper/profile/update-picture" method="post">
    <% } else { %>
        <form action="">
    <% } %>
        <label class="text-center text-lg font-bold text-gray-800 my-3 p-1 w-full flex items-center justify-center" for="avatar">Profile Picture</label>
        <img class="w-96 h-auto rounded-full overflow-hidden" src="<%= user.userPicture %>" alt="User Profile Picture">
        <input type="file" class="profileCover my-5" name="profilePicture" accept="image/png, image/jpeg, image/gif"/>
        <button class="flex flex-row justify-center p-2 bg-blue-800 rounded-lg text-white text-xs mx-auto">
            <a>Update Profile Picture</a>
        </button>
    </form>
</div>
